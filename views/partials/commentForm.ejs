<!-- Comment Form -->
<h4>Leave a Comment</h4>

<% if(!currentUser) { %>
<p>Must be logged in to leave comment!</p>
<%} if(currentUser) { %>

<form class="form-comment" method="POST" action="/post/add-comment">
  <input
    name="username"
    value="<%= currentUser.username %>"
    type="text"
    class="form-control"
    placeholder="Your name"
    hidden
  />
  <input
    name="postId"
    value="<%= post._id %>"
    type="text"
    class="form-control"
    placeholder="Your name"
    hidden
  />

  <div class="form-group">
    <label for="comment-content"> <%= currentUser.username %>:</label>
    <textarea
      name="comment"
      class="form-control"
      rows="3"
      id="comment-content"
    ></textarea>
  </div>
  <button type="submit" class="btn btn-default">Add Comment</button>
</form>
<% } %>
