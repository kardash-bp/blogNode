<!DOCTYPE html>
<html lang="en">
  <%- include('./partials/head') %>

  <body>
    <%- include('partials/navbar') %> <%- include('partials/mainHeader') %>

    <!-- Post Content-->
    <article class="mb-4">
      <div class="container px-4 px-lg-5">
        <div class="row gx-4 gx-lg-5 justify-content-center">
          <div class="col-md-10 col-lg-8 col-xl-7">
            <h2><%= post.title %></h2>
            <p class="post-meta">
              Posted in <%= post.category %> by
              <strong><%= user.username %></strong> added on <%=
              moment(post.date).format('DD MMM YYYY') %>
            </p>
            <h4><%= post.subtitle %></h4>
            <img
              class="img-fluid"
              src="<%= post.imageUrl %>"
              alt="post image"
            />
            <p><%= post.text %></p>
          </div>
        </div>
      </div>
    </article>
    <%- include('partials/footer') %>
  </body>
</html>
